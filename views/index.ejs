    <div id="displaycontainer list-group lgi">
        <!-- conatiner for all LI's generated by js file -->
        <% for(let x = 0; x < db.length; x++) { %>
            <div class="mb-2 list-group-item lgi">
                <h5 class="col-1"><%= db[x].day %></h5>
                <div class="flex-row justify-content-between">
                    <span class="col-2">Driver/Author: <%= db[x].author %></span>
                    <a class=" col-6 justify-content-center" href="<%= db[x].link %>"><%= db[x].title %></a>
                    <span class="badge rounded-pill col-2 align-self-center
                            <% if (db[x].difficulty === 'medium') { %>
                                bg-warning
                            <% } else if (db[x].difficulty === 'easy') { %>
                                bg-success
                            <% } else if (db[x].difficulty === 'hard') { %>
                                bg-danger
                            <% } else { %>
                                bg-primary
                            <% } %>">
                            <%= db[x].difficulty %>
                        </span>                
                </div>
            </div>
        <% } %>
    </div>


</body>
